<%- include('../../partials/_admin-start.ejs') %>
<%- include('../../partials/_sidebar-start.ejs') %>

<div class="d-flex justify-content-between align-items-center gap-3 flex-wrap mb-3">
  <h1 class="h3">Filmler</h1>
  <a href="/admin/movies/create" class="btn btn-success"><i class="fas fa-plus"></i> Ekle</a>
</div>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th style="width: 80px;">Resim</th>
      <th>Adı</th>
      <th style="width: 160px;"></th>
    </tr>
  </thead>
  <tbody>
    <% movies.forEach(m => { %>
      <tr>
        <td class="p-0"><img src="<%= m.image %>" class="img-fluid"></td>
        <td><%= m.name %></td>
        <td>
          <a href="/admin/movies/<%= m._id %>/edit" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Güncelle</a>
          <a href="/admin/movies/<%= m._id %>/delete" class="btn btn-danger btn-sm"><i class="fas fa-times"></i> Sil</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../../partials/_sidebar-finish.ejs') %>
<%- include('../../partials/_admin-finish.ejs') %>